<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    android:translationZ="2dp"
    app:cardUseCompatPadding="true"
    android:layout_marginHorizontal="15dp"
    android:id="@+id/itemdashboard"

    >

    <RelativeLayout
        android:id="@+id/bgcard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="63dp"
            android:layout_height="63dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/imgartikelsolo"

            >
            <ImageView
                android:id="@+id/imageartikel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_prof_user"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_suplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Suplay"
            android:textSize="12dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#000"
            android:layout_toEndOf="@+id/imgartikelsolo"
            android:layout_marginHorizontal="10dp"
            android:ellipsize="end"
            android:singleLine="true"

            />
        <TextView
            android:id="@+id/txt_bpid"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Suplay"
            android:textSize="12dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#000"
            android:layout_toEndOf="@+id/imgartikelsolo"
            android:layout_marginHorizontal="10dp"
            android:ellipsize="end"
            android:singleLine="true"

            />
        <TextView
            android:id="@+id/des_suplay"
            android:layout_below="@+id/name_suplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desripsi suplay"
            android:textSize="12dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#000"
            android:layout_toEndOf="@+id/imgartikelsolo"
            android:layout_marginHorizontal="10dp"
            android:ellipsize="end"
            android:singleLine="true"

            />

        <RelativeLayout
            android:id="@+id/tamplate_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgartikelsolo"
            android:layout_marginHorizontal="10dp"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/txttotal_suplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah :"
                android:textSize="12dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000"
                android:ellipsize="end"
                android:singleLine="true"
                />
            <TextView
                android:id="@+id/total_suplay"
                android:layout_toEndOf="@+id/txttotal_suplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000"
                android:ellipsize="end"
                android:singleLine="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tgl_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02/09/2022"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#B6B6B6"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>