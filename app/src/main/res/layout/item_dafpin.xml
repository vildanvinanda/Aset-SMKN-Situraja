<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    android:translationZ="2dp"
    app:cardUseCompatPadding="true"
    android:layout_marginHorizontal="15dp"
    android:id="@+id/itemdafpin"

    >

    <RelativeLayout
        android:id="@+id/bgcard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/imgartikelsolo"
            android:layout_width="63dp"
            android:layout_height="63dp"
            app:cardCornerRadius="10dp"

            >

            <ImageView
                android:id="@+id/imageartikel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_prof_user" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_suplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@+id/imgartikelsolo"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_bold"
            android:singleLine="true"
            android:text="Name Suplay"
            android:textColor="#000"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/des_suplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_suplay"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@+id/imgartikelsolo"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:singleLine="true"
            android:text="Harus dikembalikan tgl :"
            android:textColor="#000"
            android:textSize="12dp"

            />

        <TextView
            android:id="@+id/tgl_tegatwaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09/03/2023"
            android:background="@color/Hijaumuda"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imgartikelsolo"
            android:layout_marginLeft="10dp"
            android:paddingHorizontal="5dp"
            android:textSize="12dp"
            android:paddingVertical="1dp"
            android:textColor="@color/Hijautua"
            android:fontFamily="@font/roboto_medium"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>