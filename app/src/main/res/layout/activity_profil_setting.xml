                    <TextView
                        android:layout_below="@+id/vapp2"
                        android:id="@+id/ketvapp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="0.1 Beta"
                        android:textColor="#979797"
                        android:textSize="12dp"
                        />
                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/icout_admin"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ic_logout"
                    android:layout_centerInParent="true"
                    />
                <RelativeLayout
                    android:id="@+id/title6_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/icout_admin"
                    android:layout_marginStart="10dp"
                    >
                    <TextView
                        android:id="@+id/out_admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Keluar"
                        android:textColor="#242424"
                        android:textSize="14dp"
                        />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/rowright3_admin"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
