<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Form.FormPengajuan"
    android:background="@color/white"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:id="@+id/header1"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Form Peminjaman"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Form Peminjaman"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:id="@+id/txt_uid"
                    />
                <TextView
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Form Peminjaman"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:id="@+id/txt_nama"
                    />
                <TextView
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Form Peminjaman"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:id="@+id/txt_bpid"
                    />
                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_back"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_below="@+id/header1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                >
                <RelativeLayout
                    android:id="@+id/tamplate1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_img"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >
                        <ImageView
                            android:id="@+id/img_detail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gambar"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/jdl_detaiIMG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Barang"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="14dp"
                        android:layout_toEndOf="@+id/cardview_img"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txt_nis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Barang"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="14dp"
                        android:layout_toEndOf="@+id/cardview_img"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/txt_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/cardview_img"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/jdl_detaiIMG"
                        android:text="Deskripsi"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:maxLines="4"
                        />

                    <RelativeLayout
                        android:id="@+id/tamplate_jml"
                        android:layout_toEndOf="@+id/cardview_img"
                        android:layout_below="@+id/txt_des"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        >
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/txt_tesedia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tersedia :"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="12dp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/txt_jml"
                            android:layout_toEndOf="@+id/txt_tesedia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="10"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="12dp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/txt_pcs"
                            android:layout_toEndOf="@+id/txt_jml"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/unit"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="12dp"
                            android:textColor="@color/black"
                            />
<!--                        <TextView-->
<!--                            android:id="@+id/txt_pcs"-->
<!--                            android:layout_alignParentEnd="true"-->
<!--                            android:layout_marginLeft="5dp"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:paddingHorizontal="10dp"-->
<!--                            android:paddingVertical="5dp"-->
<!--                            android:text="+ Tambah"-->
<!--                            android:fontFamily="@font/roboto_bold"-->
<!--                            android:background="@drawable/bgtombol"-->
<!--                            android:textSize="12dp"-->
<!--                            android:textColor="@color/white"-->
<!--                            />-->

                    </RelativeLayout>
                </RelativeLayout>


                <View
                    android:layout_marginTop="15dp"
                    android:id="@+id/line"
                    android:layout_below="@+id/tamplate1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D4D4D4"
                    />

                <TextView
                    android:id="@+id/tex"
                    android:layout_below="@+id/line"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu Meminjam"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    />
                <EditText
                    android:inputType="number"
                    android:id="@+id/addwaktu"
                    android:singleLine="true"
                    android:maxLength="3"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tex"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColorHint="#D4D4D4"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:hint="Masukan waktu pinjaman"
                    android:paddingHorizontal="20dp"
                    />

                <TextView
                    android:id="@+id/tex2"
                    android:layout_below="@+id/addwaktu"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Barang"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:inputType="number"
                    android:id="@+id/addjml"
                    android:singleLine="true"
                    android:maxLength="5"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tex2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColorHint="#D4D4D4"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:hint="Masukan jumlah pinjaman"
                    android:paddingHorizontal="20dp"
                    />

                <TextView
                    android:id="@+id/tex3"
                    android:layout_below="@+id/addjml"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/addketerangan"
                    android:maxLength="255"
                    android:maxHeight="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tex3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="13dp"
                    android:textColorHint="#D4D4D4"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:hint="Masukan email anda"
                    android:paddingHorizontal="20dp"
                    />

                <TextView
                    android:id="@+id/tbl_ajukan"
                    android:layout_below="@+id/addketerangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bgtombol"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="12dp"
                    android:layout_marginTop="30dp"
                    android:text="Pinjam"
                    android:textColor="@color/white"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="50dp"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>