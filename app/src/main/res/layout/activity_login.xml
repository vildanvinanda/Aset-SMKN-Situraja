<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/primer"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/tamplate_login"
            android:layout_marginTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/roundedtop_putih"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="40dp"
                >
                <TextView
                    android:id="@+id/txtmasuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Masuk"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <RelativeLayout
                    android:id="@+id/tampalteemail"
                    android:layout_below="@+id/txtmasuk"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/icemail"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_user2"
                        />
                    <TextView
                        android:id="@+id/txtemail2"
                        android:layout_centerInParent="true"
                        android:layout_toEndOf="@+id/icemail"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Email"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/txtemail"
                        android:layout_centerInParent="true"
                        android:layout_toEndOf="@+id/icemail"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:textSize="12dp" />



                </RelativeLayout>
                <EditText
                    android:id="@+id/addemail"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tampalteemail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_edittext"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:hint="Masukan email anda"
                    android:paddingHorizontal="20dp"
                    />
                <RelativeLayout
                    android:id="@+id/tampaltepass"
                    android:layout_below="@+id/addemail"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/ickey"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_key2"
                        />
                    <TextView
                        android:id="@+id/txtpass"
                        android:layout_centerInParent="true"
                        android:layout_toEndOf="@+id/ickey"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Kata Sandi"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tamplate_pass"
                    android:layout_below="@+id/tampaltepass"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_edittext"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/addpass"
                        android:inputType="textPassword"
                        android:drawableEnd="@drawable/ic_eyes_open"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:layout_margin="2dp"
                        android:textSize="12dp"
                        android:hint="Masukan kata sandi anda"
                        android:paddingHorizontal="20dp"
                        />
<!--                    <ImageView-->
<!--                        android:id="@+id/eyes"-->
<!--                        android:layout_width="24dp"-->
<!--                        android:layout_height="24dp"-->
<!--                        android:background="@drawable/ic_eyes_open"-->
<!--                        android:layout_alignParentEnd="true"-->
<!--                        android:layout_centerVertical="true"-->
<!--                        android:layout_marginRight="20dp"-->
<!--                        android:layout_marginLeft="20dp"-->
<!--                        />-->


                </RelativeLayout>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tbl_login"
                    android:layout_below="@id/tamplate_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masuk"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:fontFamily="@font/roboto_bold"
                    android:background="@drawable/bgtombol"
                    android:layout_marginTop="40dp"
                    android:paddingHorizontal="100dp"
                    android:paddingVertical="10dp"
                    />

                <RelativeLayout
                    android:id="@+id/tmaplateforadmin"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tbl_login"
                    android:layout_centerInParent="true"
                    >
                    <RelativeLayout
                        android:id="@+id/tamplatedaf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Belum mempunyai akun?"
                            android:textSize="14dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/black"
                            android:id="@+id/txtnanya"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daftar"
                            android:textSize="14dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/primer"
                            android:id="@+id/txt_daft"
                            android:layout_toEndOf="@+id/txtnanya"
                            android:layout_marginLeft="10dp"
                            />
                    </RelativeLayout>



                </RelativeLayout>


            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgilus"
            android:layout_centerInParent="true"
            android:layout_width="305dp"
            android:layout_height="232dp"
            android:layout_above="@+id/tamplate_login"
            android:layout_marginBottom="-300dp"
            android:background="@drawable/ic_illustrasi_login" />





    </RelativeLayout>

</RelativeLayout>