<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Form.FormPengembalian"
    android:background="@color/white"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/ic_bgpengembalian"
    android:layout_alignParentBottom="true"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aset SMKN Situraja"
        android:textColor="#837E7E"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:textSize="12dp"
        android:fontFamily="@font/roboto_medium"
        />
</RelativeLayout>


<RelativeLayout
    android:id="@+id/header1"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/connntoj"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengembalian Barang"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14dp"
        android:textColor="@color/black"
        />
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_back"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        />
</RelativeLayout>

<ScrollView
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/header1"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/tamplateall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_img"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                app:cardCornerRadius="10dp"
                >
                <ImageView
                    android:id="@+id/img_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_emptyphoto"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/jdlForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Formulir Pengembalian Barang"
                android:layout_below="@+id/cardview_img"
                android:layout_marginTop="15dp"
                />
            <RelativeLayout
                android:layout_below="@+id/jdlForm"
                android:layout_marginTop="20dp"
                android:id="@+id/tamplatetxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:id="@+id/tamplatetxt00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/txtkd"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Kode peminjaman"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />
                    <TextView
                        android:id="@+id/tikdu00"
                        android:layout_toEndOf="@+id/txtkd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />
                    <TextView
                        android:id="@+id/addkd"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/tikdu00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*************"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_regular"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/tamplatetxt00"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tamplatetxt0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/txttglp"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Tanggal pinjaman"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />
                    <TextView
                        android:id="@+id/tikdu0"
                        android:layout_toEndOf="@+id/txttglp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />

                    <TextView
                        android:id="@+id/addtglp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/tikdu0"
                        android:fontFamily="@font/roboto_regular"
                        android:text="********"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/tamplatetxt0"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tamplatetxt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/txtnama"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />
                    <TextView
                        android:id="@+id/tikdu1"
                        android:layout_toEndOf="@+id/txtnama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />

                    <TextView
                        android:id="@+id/addname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/tikdu1"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Anonim"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tamplatetxt1"
                    android:id="@+id/tamplatetxt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/txtnis"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="NIS"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />
                    <TextView
                        android:id="@+id/tikdu2"
                        android:layout_toEndOf="@+id/txtnis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />

                    <TextView
                        android:id="@+id/addnis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/tikdu2"
                        android:fontFamily="@font/roboto_regular"
                        android:text="***********"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/tamplatetxt2"
                    android:id="@+id/tamplatetxt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/txtnamab"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Nama barang"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />
                    <TextView
                        android:id="@+id/tikdu3"
                        android:layout_toEndOf="@+id/txtnamab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />
                    <TextView
                        android:id="@+id/addnamab"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/tikdu3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="***********"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_regular"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/tamplatetxt3"
                    android:id="@+id/tamplatetxt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/txtnjml"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Jumlah barang"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />
                    <TextView
                        android:id="@+id/tikdu4"
                        android:layout_toEndOf="@+id/txtnjml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />

                    <TextView
                        android:id="@+id/addjml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/tikdu4"
                        android:fontFamily="@font/roboto_regular"
                        android:text="***********"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/tamplatetxt4"
                    android:id="@+id/tamplatetxt5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/txtjtp"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Jatuh tempo pada"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />
                    <TextView
                        android:id="@+id/tikdu5"
                        android:layout_toEndOf="@+id/txtjtp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />
                    <TextView
                        android:id="@+id/addjt"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/tikdu5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="***********"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_regular"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/tamplatetxt5"
                    android:id="@+id/tamplatetxt6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/txtket"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Keterangan"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />
                    <TextView
                        android:id="@+id/tikdu6"
                        android:layout_toEndOf="@+id/txtket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_medium"
                        />
                    <TextView
                        android:id="@+id/addket"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/tikdu6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="***********"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/roboto_regular"
                        />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
        <TextView
            android:layout_marginVertical="50dp"
            android:layout_below="@+id/tamplateall"
            android:id="@+id/button_pengembalian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bgtombol"
            android:layout_centerHorizontal="true"
            android:paddingHorizontal="60dp"
            android:paddingVertical="10dp"
            android:text="Kirim"
            android:textColor="@color/white" />
    </RelativeLayout>
</ScrollView>



</RelativeLayout>