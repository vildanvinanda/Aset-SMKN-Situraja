<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragmen.Home">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/awal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff">


            <View
                android:id="@+id/latar"
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:background="@drawable/ic_bgawal"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_vertical"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtwelcome"
                        android:layout_marginTop="-5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hay, Selamat Datang"
                        android:textSize="12dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#fff"
                        android:fontFamily="@font/roboto_regular"

                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/txtuser"
                        android:layout_below="@+id/txtwelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anonim"
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#fff"
                        android:fontFamily="@font/roboto_medium"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:id="@+id/txtuidvisible"
                        android:layout_below="@+id/txtwelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anonim"
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/roboto_medium"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:id="@+id/txtnisvisible"
                        android:layout_below="@+id/txtwelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anonim"
                        android:textSize="16dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/roboto_medium"
                        />
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menupilihan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginHorizontal="20dp"
                >
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="270dp"
                    android:layout_height="90dp"
                    android:background="@drawable/tamplateputih"
                    android:elevation="10dp"
                    android:translationZ="0dp"
                    android:outlineSpotShadowColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        >
                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            >
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                >
                                <TextView
                                    android:id="@+id/jdl1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Barang Dikembalikan"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_bold"
                                    android:textAlignment="center"
                                    android:textSize="12dp"
                                    />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/jdl1"
                                    android:layout_centerHorizontal="true"
                                    >
                                    <TextView
                                        android:layout_marginTop="5dp"
                                        android:id="@+id/angka_kembali"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="24dp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/roboto_bold"
                                        android:textAlignment="center"
                                        />
                                    <TextView
                                        android:layout_marginTop="5dp"
                                        android:id="@+id/tctpcs"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="/pcs"
                                        android:textSize="12dp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/roboto_bold"
                                        android:textAlignment="center"
                                        />
                                </LinearLayout>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_alignParentEnd="true"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            >
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                >
                                <TextView
                                    android:id="@+id/jdl2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Barang     Dipinjam"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_bold"
                                    android:textAlignment="center"
                                    android:textSize="12dp"
                                    />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/jdl2"
                                    android:layout_centerHorizontal="true"
                                    >
                                    <TextView
                                        android:layout_marginTop="5dp"
                                        android:id="@+id/angka_pinjam"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="24dp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/roboto_bold"
                                        android:textAlignment="center"
                                        />
                                    <TextView
                                        android:layout_marginTop="5dp"
                                        android:id="@+id/tctpcs2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="/pcs"
                                        android:textSize="12dp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/roboto_bold"
                                        android:textAlignment="center"
                                        />
                                </LinearLayout>
                            </RelativeLayout>
                        </RelativeLayout>

                    </RelativeLayout>

                    <View
                        android:layout_centerInParent="true"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#D4D4D4"
                        android:layout_marginVertical="10dp"
                        />


                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/domain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menupilihan"
                android:layout_marginTop="20dp"
                >
                <RelativeLayout
                    android:id="@+id/user_domain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:id="@+id/txttamplate1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="20dp"
                        >
                        <TextView
                            android:id="@+id/txtedu2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daftar Barang Terbaru"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="12dp"
                            android:textColor="#000"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_below="@+id/txttamplate1"
                        android:id="@+id/tamplateartikel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:listitem="@layout/item_dashboard"
                            />
                    </RelativeLayout>
                </RelativeLayout>

<!--                <RelativeLayout-->
<!--                    android:id="@+id/admin_domain"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    >-->
<!--                    -->
<!--                    <RelativeLayout-->
<!--                        android:id="@+id/txttamplate2"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:orientation="horizontal"-->
<!--                        android:layout_marginHorizontal="20dp"-->
<!--                        >-->
<!--                        <TextView-->
<!--                            android:id="@+id/txtmenu"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="Menu Admin"-->
<!--                            android:layout_centerVertical="true"-->
<!--                            android:fontFamily="@font/roboto_bold"-->
<!--                            android:textSize="12dp"-->
<!--                            android:textColor="#000"-->
<!--                            />-->
<!--                    </RelativeLayout>-->
<!--                </RelativeLayout>-->
            </RelativeLayout>
            <View
                android:layout_below="@+id/domain"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />

        </RelativeLayout>

    </ScrollView>

</FrameLayout>